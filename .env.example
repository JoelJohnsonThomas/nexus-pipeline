# Environment Variables for AI News Aggregator Pipeline
# Copy this file to .env and fill in your actual values

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_URL=postgresql://username:password@localhost:5432/database

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379

# ============================================
# GOOGLE GEMINI API
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Model to use (gemini-pro is recommended)
GEMINI_MODEL=gemini-pro

# ============================================
# EMAIL CONFIGURATION (Gmail SMTP)
# ============================================
# Your Gmail address
EMAIL_SENDER=your_email@gmail.com

# Gmail App Password (NOT your regular password!)
# Generate one at: https://myaccount.google.com/apppasswords
EMAIL_PASSWORD=your_app_password_here

# Recipient email for daily digest
EMAIL_RECIPIENT=recipient@gmail.com

# SMTP Configuration (Gmail defaults)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587

# ============================================
# DIGEST CONFIGURATION
# ============================================
# How many hours back to look for articles (24 = daily digest)
DIGEST_HOURS_BACK=24

# Timezone for digest scheduling (e.g., America/New_York, Europe/London)
TIMEZONE=America/New_York

# ============================================
# PROCESSING PIPELINE CONFIGURATION
# ============================================
# Maximum number of retries for failed jobs
MAX_RETRIES=3

# Job timeout in seconds
JOB_TIMEOUT=600

# Cache TTL in seconds (default: 1 hour)
CACHE_TTL=3600

# Embedding model (default: all-MiniLM-L6-v2)
EMBEDDING_MODEL=all-MiniLM-L6-v2
